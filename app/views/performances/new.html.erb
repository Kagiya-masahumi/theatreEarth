<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規作成
      </h1>
    </div>
  </div>
</section>

<% if @performance.errors.any? %>
  <div class="notification is-danger">
    <h2><%= pluralize(@performance.errors.count, "error") %> prohibited this object from being saved: not successfully</h2>
    <ul>
      <% @performance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<%end%>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
        <%= form_for @performance do |f| %>
          <div class="field">
            <%= f.label :title, "公演名", class: "label" %>
            <%= f.text_field :title , class: "input" %>
          </div>

          <div class="field">
            <%= f.label :body , "公演内容" ,class: "label" %>
            <%= f.text_area :body , class: "textarea" %>
          </div>

          <div class="field">
            <%= f.label :image, "写真", class: "label" %>
            <%= f.attachment_field :image, class: "input" %>
          </div>

            <%= f.submit '投稿', class: "button is-success" %>
        <% end %>
      </div>
    </div>
  </div>
</section>



