<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <div class="title">
        公演詳細
      </div>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-7">
        <div class="card">
          <div class="card-image">
            <figure class="image is-4by3">
              <%= attachment_image_tag @performance, :image%>
            </figure>
          </div>
          <div class="card-content">
            <div class="media">
              <div class="media-content">
                <p class="title is-4"><%= @performance.title %></p>
              </div>
            </div>

            <div class="content">
              <table class="table is-narrow">
              <tr>
                <th>公演名</th>
              </tr>
              <tr>
                <td><%= simple_format @performance.body %></td>
              </tr>
            </table>
            <% if @performance.user.id == current_user.id %>
              <%= link_to "編集画面へ", edit_performance_path(@performance), class: "button is-success" %>
            <% end %>
          </div>
         </div>
        </div>
      </div>
    
      <div class="column is-4">
          <article class="panel is-link">
            <p class="panel-heading">
              By <%= @performance.user.username %>
            </p>
            <div class="panel-block">
              <p class="control">
                <%= @performance.user.profile %>
              </p>
            </div>
            <%= link_to user_path(@performance.user), class: "panel-block" do %>
              <span class="panel-icon">
                <i class="fas fa-user" aria-hidden="true"></i>
              </span>
              <%= @performance.user.username %> さんのページへ
            <% end %>
          </article>
        </div>
      </div>
    </div>
  </div>
</section>



 
 


 